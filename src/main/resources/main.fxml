<AnchorPane prefHeight="318.0" prefWidth="492.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.controllers.MainController">
    <children>
        <HBox layoutX="15.0" layoutY="16.0" prefHeight="302.0" prefWidth="496.0">
            <children>
                <VBox prefHeight="302.0" prefWidth="219.0">
                    <children>
                        <Label text="Размер игрового поля">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="5.0" />
                            </VBox.margin>
                        </Label>
                        <ComboBox fx:id="comboBoxSizeField" prefWidth="150.0">
                            <VBox.margin>
                                <Insets left="5.0" top="5.0" />
                            </VBox.margin>
                        </ComboBox>
                    </children>
                </VBox>
                <VBox prefHeight="302.0" prefWidth="243.0">
                    <children>
                        <Button fx:id="buttonStartGame" mnemonicParsing="false" onAction="#startGame" prefHeight="69.0" prefWidth="199.0" text="Играть">
                            <VBox.margin>
                                <Insets left="25.0" top="25.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#getRecord" prefHeight="69.0" prefWidth="199.0" text="Рекорды">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="25.0" top="15.0" />
                            </VBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#getHelp" prefHeight="69.0" prefWidth="199.0" text="Справка">
                            <VBox.margin>
                                <Insets left="25.0" top="15.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children></VBox>
            </children>
        </HBox>
    </children>

</AnchorPane>
